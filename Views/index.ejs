<script>
    document.addEventListener('DOMContentLoaded', function() {
        const isAuthenticated = localStorage.getItem('isAuthenticated') === 'true';
        const loginButton = document.getElementById('loginbtn');
        const loggedinSection = document.getElementById('loggedin');
        const usernameSpan = document.getElementById('newusername');
        const logout = document.getElementById('logout');
        const profileimg = document.querySelector('.profile img');
    
        logout.addEventListener('click', () => {
          localStorage.removeItem('isAuthenticated');
          localStorage.removeItem('username');
          location.reload();
        });
    
        if (isAuthenticated) {
          loginButton.style.display = 'none'; // Hide the login button
          loggedinSection.style.display = 'block'; // Show the logged-in section
          usernameSpan.innerText = localStorage.getItem('username'); // Display the username
          const avatarurl = localStorage.getItem('avatarurl'); // Retrieve avatar URL from localStorage
          if (avatarurl) {
            profileimg.src = avatarurl; // Update profile photo source if available
          }
        }
    });
    </script>
    
<script>
    const body = document.querySelector('body'),
  sidebar = body.querySelector('nav'),
  toggle = body.querySelector(".toggle"),
  searchBtn = body.querySelector(".search-box"),
  modeSwitch = body.querySelector(".toggle-switch"),
  modeText = body.querySelector(".mode-text");


toggle.addEventListener("click" , () =>{
sidebar.classList.toggle("close");
})

searchBtn.addEventListener("click" , () =>{
sidebar.classList.remove("close");
})

modeSwitch.addEventListener("click" , () =>{
body.classList.toggle("dark");

if(body.classList.contains("dark")){
    modeText.innerText = "Light mode";
}else{
    modeText.innerText = "Dark mode";
    
}
});

